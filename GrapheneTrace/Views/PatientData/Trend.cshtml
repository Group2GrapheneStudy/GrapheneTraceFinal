@model List<GrapheneTrace.Models.TrendPoint>

@{
    ViewData["Title"] = "Pressure Trend";
    var email = ViewBag.PatientEmail as string ?? "My Data";
}

<h2 class="mb-3">Pressure Trend – @email (last 24 hours, hourly)</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        Not enough pressure data to display a trend yet.
    </div>
}
else
{
    // Prepare arrays for Chart.js (one point per hour)
    var labels = Model
        .Select(p => p.Timestamp.ToLocalTime().ToString("HH:mm"))
        .ToArray();

    var peaks = Model
        .Select(p => p.PeakPressure)
        .ToArray();

    var areas = Model
        .Select(p => p.ContactArea)
        .ToArray();

    var labelsJson = System.Text.Json.JsonSerializer.Serialize(labels);
    var peaksJson = System.Text.Json.JsonSerializer.Serialize(peaks);
    var areasJson = System.Text.Json.JsonSerializer.Serialize(areas);

    <!-- CHART CARD -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">Pressure Over Time (Hourly, last 24 hours)</h5>
            <canvas id="trendChart" style="max-height:400px;"></canvas>
        </div>
    </div>

    <!-- CHART.JS -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        (function () {
            // Razor injects proper JS arrays via Html.Raw
            const labels = @Html.Raw(labelsJson);
            const peaks  = @Html.Raw(peaksJson);
            const areas  = @Html.Raw(areasJson);

            const ctx = document.getElementById('trendChart').getContext('2d');

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Peak Pressure',
                            data: peaks,
                            borderWidth: 2,
                            tension: 0.25,
                            fill: false
                        },
                        {
                            label: 'Contact Area (%)',
                            data: areas,
                            borderWidth: 2,
                            tension: 0.25,
                            fill: false
                        }
                    ]
                },
                options: {
                    responsive: true,
                    interaction: { mode: 'index', intersect: false },
                    plugins: {
                        legend: { position: 'top' },
                        tooltip: {
                            callbacks: {
                                label: function (ctx) {
                                    if (ctx.dataset.label.includes('Area'))
                                        return ctx.dataset.label + ': ' + ctx.parsed.y.toFixed(1) + '%';
                                    return ctx.dataset.label + ': ' + ctx.parsed.y.toFixed(1);
                                }
                            }
                        }
                    },
                    scales: {
                        x: { title: { display: true, text: 'Time (hour)' } },
                        y: { title: { display: true, text: 'Value' } }
                    }
                }
            });
        })();
    </script>

    <!-- RAW DATA TABLE (hourly points) -->
    <h4 class="mt-4">Hourly Trend Data</h4>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Hour</th>
                <th>Peak Pressure (avg)</th>
                <th>Contact Area % (avg)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Timestamp.ToLocalTime().ToString("g")</td>
                    <td>@p.PeakPressure</td>
                    <td>@p.ContactArea.ToString("0.0")</td>
                </tr>
            }
        </tbody>
    </table>
}
