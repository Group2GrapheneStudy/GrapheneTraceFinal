@model List<GrapheneTrace.Models.TrendPoint>
@using System.Text.Json

@{
    ViewData["Title"] = "Pressure Trend";

    var email = ViewBag.PatientEmail as string ?? "My Data";

    // Non-null list to satisfy nullable analysis
    var data = Model ?? new List<GrapheneTrace.Models.TrendPoint>();
    var hasData = data.Any();

    string chartJson = "null";

    if (hasData)
    {
        var ordered = data
            .OrderBy(p => p.Timestamp)
            .ToList();

        var labels = ordered
            .Select(p => p.Timestamp.ToLocalTime().ToString("HH:mm"))
            .ToArray();

        var peaks = ordered
            .Select(p => p.PeakPressure)
            .ToArray();

        var areas = ordered
            .Select(p => p.ContactArea)
            .ToArray();

        var payload = new
        {
            labels,
            peaks,
            areas
        };

        chartJson = JsonSerializer.Serialize(payload);
    }
}

<h2 class="mb-3">Pressure Trend – @email (last 24 hours, hourly)</h2>

@if (!hasData)
{
    <div class="alert alert-info">
        Not enough pressure data to display a trend yet.
    </div>
}
else
{
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">Pressure Over Time (last 24h)</h5>
            <canvas id="trendChart" style="max-height:400px;"></canvas>
        </div>
    </div>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- JSON payload for the chart -->
    <script id="trend-json" type="application/json">
        @Html.Raw(chartJson)
    </script>

    <script>
        (function () {
            const jsonElement = document.getElementById('trend-json');
            if (!jsonElement) return;

            const data = JSON.parse(jsonElement.textContent || '{}');

            const labels = data.labels || [];
            const peaks = data.peaks || [];
            const areas = data.areas || [];

            const canvas = document.getElementById('trendChart');
            if (!canvas) return;

            const ctx = canvas.getContext('2d');

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Peak Pressure',
                            data: peaks,
                            borderWidth: 2,
                            tension: 0.25,
                            fill: false
                        },
                        {
                            label: 'Contact Area (%)',
                            data: areas,
                            borderWidth: 2,
                            tension: 0.25,
                            fill: false
                        }
                    ]
                },
                options: {
                    responsive: true,
                    interaction: {
                        mode: 'index',
                        intersect: false
                    },
                    plugins: {
                        legend: { position: 'top' }
                    },
                    scales: {
                        x: { title: { display: true, text: 'Time' } },
                        y: { title: { display: true, text: 'Value' } }
                    }
                }
            });
        })();
    </script>

    <h4 class="mt-4">Raw Data</h4>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Time</th>
                <th>Peak Pressure</th>
                <th>Contact Area %</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in data.OrderBy(m => m.Timestamp))
            {
                <tr>
                    <td>@p.Timestamp.ToLocalTime().ToString("g")</td>
                    <td>@p.PeakPressure</td>
                    <td>@p.ContactArea.ToString("0.0")</td>
                </tr>
            }
        </tbody>
    </table>
}
