@model List<GrapheneTrace.Models.Prescription>

@{
    ViewData["Title"] = "My Prescriptions";
}

<h2>My Prescriptions</h2>

<a class="btn btn-primary mb-3" href="/Prescriptions/Create">
    âž• Create Prescription
</a>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No prescriptions found.
    </div>
}
else
{
    <table class="table table-hover table-bordered">
        <thead class="table-light">
            <tr>
                <th>Patient</th>
                <th>Drug</th>
                <th>Dosage</th>
                <th>Frequency</th>
                <th>Quantity</th>
                <th>Instructions</th>
                <th>Date Prescribed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Patient.UserAccount.Email</td>
                    <td>@p.DrugName</td>
                    <td>@p.Dosage</td>
                    <td>@p.Frequency</td>
                    <td>@p.Quantity</td>
                    <td>@p.Instructions</td>
                    <td>@p.DatePrescribed.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary" href="/Prescriptions/Edit?id=@p.Id">Edit</a>

                        <form method="post" action="/Prescriptions/Delete" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@p.Id" />
                            <button class="btn btn-sm btn-danger" onclick="return confirm('Delete this prescription?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
