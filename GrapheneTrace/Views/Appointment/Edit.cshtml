@model GrapheneTrace.Models.Appointment

<h2 class="mb-4">Edit Appointment</h2>

<form method="post" class="card p-4 shadow-sm">
    <input type="hidden" name="appointmentId" value="@Model.AppointmentId" />

    <div class="mb-3">
        <label>Patient</label>
        <select class="form-select" name="patientId">
            @foreach (var p in ViewBag.Patients)
            {
                <option value="@p.PatientId" @(p.PatientId == Model.PatientId ? "selected" : "")>
                    @p.UserAccount.Email
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label>Clinician</label>
        <select class="form-select" name="clinicianId">
            @foreach (var c in ViewBag.Clinicians)
            {
                <option value="@c.ClinicianId" @(c.ClinicianId == Model.ClinicianId ? "selected" : "")>
                    @c.UserAccount.Email
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label>Start Time</label>
        <input class="form-control" type="datetime-local"
               name="start"
               value="@Model.StartTime.ToLocalTime().ToString("yyyy-MM-ddTHH:mm")" />
    </div>

    <div class="mb-3">
        <label>End Time</label>
        <input class="form-control" type="datetime-local"
               name="end"
               value="@Model.EndTime.ToLocalTime().ToString("yyyy-MM-ddTHH:mm")" />
    </div>

    <button class="btn btn-primary w-100">Save Changes</button>
</form>
