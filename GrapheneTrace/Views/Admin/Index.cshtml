@model GrapheneTrace.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1 class="mb-4">Admin Dashboard</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Patients</h5>
                <p class="display-6">@Model.Patients.Count</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Clinicians</h5>
                <p class="display-6">@Model.Clinicians.Count</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Admins</h5>
                <p class="display-6">@Model.Admins.Count</p>
            </div>
        </div>
    </div>
</div>

<a class="btn btn-outline-primary mb-3" asp-controller="Appointment" asp-action="Index">
    Manage All Appointments
</a>


<h3>Create User</h3>
<form asp-action="CreateUser" method="post" class="row g-3 mb-4">
    <div class="col-md-4">
        <label class="form-label">Email</label>
        <input class="form-control" name="email" required />
    </div>
    <div class="col-md-4">
        <label class="form-label">Password</label>
        <input class="form-control" type="password" name="password" required />
    </div>
    <div class="col-md-3">
        <label class="form-label">Role</label>
        <select class="form-select" name="role" required>
            <option value="Patient">Patient</option>
            <option value="Clinician">Clinician</option>
            <option value="Admin">Admin</option>
        </select>
    </div>
    <div class="col-md-1 d-flex align-items-end">
        <button class="btn btn-primary w-100">Create</button>
    </div>
</form>

<h3>Existing Users</h3>

<ul class="nav nav-tabs" id="adminTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tabPatients" type="button">Patients</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tabClinicians" type="button">Clinicians</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tabAdmins" type="button">Admins</button>
    </li>
</ul>

<div class="tab-content pt-3">
    <div class="tab-pane fade show active" id="tabPatients">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>PatientId</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var p in Model.Patients)
                {
                    <tr>
                        <td>@p.UserAccount.Email</td>
                        <td>@p.PatientId</td>
                        <td>
                            <a class="btn btn-sm btn-outline-primary"
                               asp-controller="DataFile"
                               asp-action="Upload"
                               asp-route-patientId="@p.PatientId">
                                Upload CSV
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

    <div class="tab-pane fade" id="tabClinicians">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>ClinicianId</th>
                    <th>Specialty</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Clinicians)
                {
                    <tr>
                        <td>@c.UserAccount.Email</td>
                        <td>@c.ClinicianId</td>
                        <td>@c.Specialty</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="tab-pane fade" id="tabAdmins">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>AdminId</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model.Admins)
                {
                    <tr>
                        <td>@a.UserAccount.Email</td>
                        <td>@a.AdminId</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
